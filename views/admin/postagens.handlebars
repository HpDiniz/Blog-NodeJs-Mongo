<h2> Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{_creationDate}}</small><br>
      <small>Categoria: {{categoria.nome}}</small><br>
      {{#if admin}}
        <a href="/admin/postagens/edit/{{_id}}">
          <button class="btn-sm btn btn-primary mt-3">Editar postagem</button>
        </a>
        <a href="/admin/postagens/delete/{{_id}}">
          <button class="btn-sm btn btn-danger mt-3">Deletar postagem</button>
        </a>
      {{/if}}
    </div>
  </div>
{{else}}
  <h5 class="mt-3"> Nenhuma postagem registrada</h5>
{{/each}}

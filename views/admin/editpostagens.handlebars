{{#each erros}}
  <div class="alert alert-danger"> {{text}} </div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar categoria:</h4>
    <form action="/admin/postagens/edit" method="POST">
      <input type="hidden" name="id" value="{{postagens._id}}">
      <label for="titulo">Título: </label>
      <input type="text" id="titulo" value="{{postagens.titulo}}" name="titulo"  placeholder="titulo da postagem" class="form-control mb-3" required>
      <label for="slug">Slug: </label>
      <input type="text" id="slug" value="{{postagens.slug}}" name="slug" placeholder="Slug da postagem" class="form-control mb-3" required>
      <label for="Descricao">Descrição: </label>
      <input type="text" id="descricao" value="{{postagens.descricao}}" name="descricao" placeholder="Descrição da postagem" class="form-control mb-3" required>
      <label for="conteudo">Conteúdo: </label>
      <textarea name="conteudo" class="form-control mb-3" placeholder="Conteúdo da postagem" required>{{postagens.conteudo}}</textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="form-control mb-3">
        {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <br>
      <button type="submit" class="btn btn-success">Criar postagem</button>
    </form>
  </div>
</div>

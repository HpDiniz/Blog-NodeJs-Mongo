<h2> Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add">
  <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: /{{slug}}</small>
      <a href="/admin/categorias/edit/{{_id}}"><br>
        <button class="btn-sm btn btn-primary mt-3">Editar categoria</button>
      </a>
      <form action="/admin/categorias/delete" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn-sm mt-2 btn btn-danger">Deletar categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h5 class="mt-3"> Nenhuma categoria registrada </h5>
{{/each}}
